# Environment Variables
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/espfun_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secret (Generate a strong secret)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# Blockchain Configuration
MONAD_RPC_URL="https://your-monad-rpc-endpoint.com"
MONAD_CHAIN_ID=10143

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL="info"

# CORS
ALLOWED_ORIGINS="http://localhost:3001,http://localhost:3000"

# Admin Credentials (for initial setup)
ADMIN_WALLET_ADDRESS="0x..."

# Pack Issuer Private Key (for pack purchases)
PACK_ISSUER_PRIVATE_KEY="your-pack-issuer-private-key-here"
